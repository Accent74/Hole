Const DEF_TAX_ID = 756

Class Postgree
	Private IsErr, ErrMsg, oPeriod, IsOpen, ConnString
	Private Conn, Rs, nCount
	Private EntRoot, EntRootID 
	Private pKindID, pListID, pKind
	Private En

	Public Sub SetPrice(prKindID, prListID)

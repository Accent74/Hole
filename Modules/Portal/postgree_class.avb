		Set En = workarea.enum(ARTICLE_TAXGRP)

		nCount = 0
 		IsOpen = False
		IsErr = False	
		ErrMsg = ""
		Set oPeriod = Workarea.Period
	End Sub

	Public Sub SetRoot(eRoot, eRootID)
		If Not eRoot Is Nothing Then
			Set EntRoot = eRoot
			EntRootID = eRootID
		End If

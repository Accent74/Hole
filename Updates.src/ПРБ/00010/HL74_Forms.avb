Function form_savecolumnwidtharray(FormID, aColWidth)
	Dim pItem, pSettings

	Set pItem = Workarea.ProjectItem(FormID)

	If Not pItem Is Nothing Then
		pItem.Params(prmFormSettings).Value = Join(aColWidth, "|")
		form_savecolumnwidtharray = True
	Else
		form_savecolumnwidtharray = False
	End If

End Function

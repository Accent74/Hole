Function Form_Save(Op, Form)
	Dim Cancel

	If Op.IsNew Then
		Op.String2 = workarea.dbuser
	Else
		Op.String2 = Left(token(Op.String2, 1, "/") & "/" & workarea.dbuser, 50)
	End If

	With Op.Trans(1)
		Op.String1 = Left(.AgFromBind.name & " -> " & .AgToBind.Name, 50)
	End With

	Op.LockDate = True
	Op.SetDate Op.Date

	Op.Done = True

	' если провести хозяйственную операцию невозможно, то необходимо запросить проведение у пользователя
	If Op.TemplateID = 0 Then Call Form_SelectTemplate(Op, Form)
	If Op.DocNo = "" Then Op.AutoNum

	Cancel = False

	With Op.TemplateInvoker2
		.FireBeforeSave Cancel
		.FireOnRecalc
	End With

	If Not op.Save(4) Then
		MsgBox "Документ не сохранен", vbExclamation, Op.Name
		Form_Save = False
	Else
		Form_Save = True
	End If
End Function

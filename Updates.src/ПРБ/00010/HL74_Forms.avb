Function Form_ReplaceOneEnt(Trans, ByRef Ents)
	Dim Qty

	Form_ReplaceOneEnt = True

	If Ents.Exists(Trans.EntID) Then
		Qty = Ents(Trans.EntID)

		If Qty = 0 Then 
			Trans.EntID = 0
		Else
			Trans.Qty = Qty
			Ents(Trans.EntID) = 0
			Trans.Sum = Round2(Trans.Sum, 2)
		End If
	End If

End Function

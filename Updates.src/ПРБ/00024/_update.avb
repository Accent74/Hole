	AddMonthCalendar MscRoot, "4/1/2020", "4/30/2020", "Апрель 2020", "8;8;8;В;В;8;8;8;8;8;В;В;8;8;8;8;8;В;В;8;8;8;8;8;В;В;8;8;8;8" , 175, 22, 8
	AddMonthCalendar MscRoot, "12/1/2020", "12/31/2020", "Декабрь 2020", "8;8;8;8;В;В;8;8;8;8;8;В;В;8;8;8;8;8;В;В;8;8;8;8;8;В;В;8;8;8;8" , 183, 23, 8

Sub AddMonthCalendar(Root, Date1, Date2, MscName, String1, Sum1, Sum2,  Sum3)
	Dim MscID, Msc

	MscID = Root.Find(MscName, 0, 2)

	If MscID = 0 Then
		Set Msc = Root.Create(1, MscName)

		If Not Msc Is Nothing Then
			Msc.Date1 = Date1
			Msc.Date2 = Date2
			Msc.String1 = String1
			Msc.Sum1 = Sum1
			Msc.Sum2 = Sum2
			Msc.Sum3 = Sum3
	
			Msc.Save
'			writelog Array("Сообщение:", "Добавлена аналитика", Msc.Name), updater
'		Else
'			writelog Array("Ошибка:", "Ошибка добавления аналитики:", MscName), updater
		End If
	End If

End Sub

Function CreateExcelApp(ByRef xApp, ByRef ErrorMsg)
	On Error Resume Next

	Set xApp = CreateObject("Excel.Application")
	If Err.Number = 0 Then
		ErrorMsg = ""
		'xApp.Visible = True
	Else
		ErrorMsg = Err.Description & "( " & Err.Number & " )"
	End If

	CreateExcelApp = (Err.Number = 0)
	Err.Clear

End Function

Sub SetElementRoot(ByRef AgRoot, ByRef EntRoot)
	If com_getparamvalue(Workarea, prmDBAgRoot, 0) <> 0 Then
		Set EntRoot = Workarea.Entity(Workarea.Params(prmDBEntRoot).Value2).Children
	Else
		Set EntRoot = Workarea.Entities
	End If

	If com_getparamvalue(Workarea, prmDBAgRoot, 0) <> 0 Then
		Set AgRoot = Workarea.Agent(Workarea.Params(prmDBAgRoot).Value2).Children
	Else
		Set AgRoot = Workarea.Agents
	End If
End Sub

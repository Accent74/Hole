Sub CopyAttr(NodeFrom, NodeTo)
	Dim i, AttrName

	With NodeFrom.Attributes
		For i = 0 To .Length - 1
			AttrName = .Item(i).Name
			NodeTo.SetAttribute AttrName, NodeFrom.GetAttribute(AttrName)
		Next
	End With
End Sub


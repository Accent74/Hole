Function FindRepElem(ElemReps, name, filename)
	Dim i
	
	For i = 1 To ElemReps.Count
		With ElemReps.Item(i)
			If .Name = name And .FileName = FileName Then
				FindRepElem = i
				Exit Function
			End If
		End With
	Next

	FindRepElem = 0

End Function

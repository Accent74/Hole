Function AddParams(updater, Root, DictElem, RootElems)
	Dim i, RootNodes

	AddParams = True
	Set RootNodes = Root.ChildNodes
	
	For i = 0 To RootNodes.Length - 1
		If Not AddParam(updater, RootNodes.Item(i), RootElems) Then
			AddParams = False
			Exit Function
		End If
	Next		

End Function

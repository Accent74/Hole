Function CutGuid(ByVal guid)
	
	guid = LCase(guid)

	If Not IsNull(guid) Then
		If InStr(guid, "{guid {") <> 0 Then
			guid = Mid(guid, 7, Len(guid) - 7)
			If App.AppType = "OLEDB" Then guid = Mid(guid, 2, Len(guid) - 2)
		End If
			
		CutGuid = guid
	Else
		CutGuid = ""
	End If

End Function
